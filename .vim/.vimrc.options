" Source:  https://github.com/erikschreier/nordic-vim
" Version: 1.0 (Jun 12 2019)
" File:    ~/.vim/.vimrc.options
"==============================================================================
" Load functionality depending on the filetype
"------------------------------------------------------------------------------
syntax on
filetype plugin on
filetype indent on

let python_highlight_all=1             " highlights .py builtins and operators
"------------------------------------------------------------------------------
" Interface and settings
"------------------------------------------------------------------------------
set encoding=utf-8
set noswapfile
set number
set laststatus=2
set foldmethod=indent                  " fold lines with equal indents
set foldlevel=99                       " close higher level folds only
"------------------------------------------------------------------------------
" Split options
"------------------------------------------------------------------------------
set splitright                         " split new fold right of current
set splitbelow                         " split new fold below current
"------------------------------------------------------------------------------
" Highlight options
"------------------------------------------------------------------------------
set hlsearch                           " highlight all pattern matches
set incsearch                          " highlight them while typing
"------------------------------------------------------------------------------
" Plugin options
"------------------------------------------------------------------------------
let g:SimpylFold_docstring_preview=1   " show docstring for folded blocks
"==============================================================================
